# Polymarket Arbitrage Scanner Configuration
# Copy this file to .env and customize

# ==================== SCANNER SETTINGS ====================
# How often to scan for opportunities (seconds)
SCAN_INTERVAL_SECONDS=60

# Minimum profit threshold (decimal, 0.025 = 2.5%)
MIN_PROFIT_THRESHOLD=0.025

# Maximum markets to scan per cycle
MAX_MARKETS_TO_SCAN=500

# Minimum liquidity to consider (USD)
MIN_LIQUIDITY=1000

# ==================== DATABASE ====================
# SQLite for local, PostgreSQL for production
DATABASE_URL=sqlite+aiosqlite:///./data/arbitrage.db

# ==================== LOGGING ====================
LOG_LEVEL=INFO

# ==================== TRADING (Optional) ====================
# Set to true to enable real trading
TRADING_ENABLED=false

# Get these from https://polymarket.com/settings/api-keys
# POLYMARKET_PRIVATE_KEY=your_wallet_private_key
# POLYMARKET_API_KEY=your_api_key
# POLYMARKET_API_SECRET=your_api_secret
# POLYMARKET_API_PASSPHRASE=your_passphrase

# Safety limits
MAX_TRADE_SIZE_USD=100
MAX_DAILY_TRADE_VOLUME=1000
MAX_OPEN_POSITIONS=10

# ==================== TRADING VPN/PROXY (Optional) ====================
# Route ONLY trading requests through a VPN proxy
# Scanning and data fetching remain on the direct connection
TRADING_PROXY_ENABLED=false

# Proxy URL â€” supports SOCKS5, HTTP, HTTPS
# Examples:
#   socks5://user:pass@127.0.0.1:1080
#   http://127.0.0.1:8080
#   https://proxy.example.com:443
# TRADING_PROXY_URL=socks5://127.0.0.1:1080

# Block trades if VPN proxy is unreachable (recommended for safety)
TRADING_PROXY_REQUIRE_VPN=true

# Verify SSL certificates through the proxy
# TRADING_PROXY_VERIFY_SSL=true

# Timeout for proxied trading requests (seconds)
# TRADING_PROXY_TIMEOUT=30

# ==================== NOTIFICATIONS (Optional) ====================
# Telegram notifications
# TELEGRAM_BOT_TOKEN=your_bot_token
# TELEGRAM_CHAT_ID=your_chat_id

# ==================== WALLET TRACKING (Optional) ====================
# Comma-separated list of wallets to track
# TRACKED_WALLETS=0x123...,0x456...
